<h3>tweets List</h3>
    <% @tweets.each do |tweet| %>
      <div class=“col-sm-12”>
            <div class="panel panel-warning">
              
              <div class="panel-body">
              <div class="panel panel-default">
                <div class="panel-heading">
                <%= tweet.user.nickname %>
                <% if user_signed_in? && current_user.id == tweet.user_id %>
                  <div class="buttons">
                    <a href="/tweets/<%=tweet.id%>/edit"><span class="glyphicon glyphicon-edit"></span></a>
                    <a href="/tweets/<%=tweet.id%>" data-method="delete"><span class="glyphicon glyphicon-trash"></span></a>
                  </div>
                <% end %>
                  
                </div>
                <div class="panel-body">
                  <%= tweet.text %>
                </div>
            </div>
      </div>
    <% end %>
    <%= paginate(@tweets) %>